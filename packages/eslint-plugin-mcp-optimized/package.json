{
  "name": "eslint-plugin-mcp-optimized",
  "version": "1.3.2",
  "description": "ESLint rules optimized for Model Context Protocol (MCP) - AI assistants can actually fix these",
  "type": "commonjs",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./types": {
      "types": "@forge-js/eslint-plugin-llm-optimized/src/index.d.ts",
      "default": "@forge-js/eslint-plugin-llm-optimized/src/index.js"
    }
  },
  "author": "Ofri Peretz <ofriperetzdev@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ofri-peretz/forge-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ofri-peretz/forge-js.git",
    "directory": "packages/eslint-plugin-mcp-optimized"
  },
  "bugs": {
    "url": "https://github.com/ofri-peretz/forge-js/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "AGENTS.md"
  ],
  "keywords": [
    "eslint",
    "eslint-plugin",
    "typescript",
    "linting",
    "mcp",
    "mcp-optimized",
    "model-context-protocol",
    "ai",
    "code-quality",
    "ast",
    "static-analysis"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "peerDependencies": {
    "@forge-js/eslint-plugin-llm-optimized": "^1.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.46.2",
    "@typescript-eslint/rule-tester": "^8.46.2",
    "@forge-js/eslint-plugin-llm-optimized": "^1.0.0",
    "vitest": "^4.0.6"
  }
}
