{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@forge-js/eslint-plugin-llm-optimized": [
        "packages/eslint-plugin/src/index.ts"
      ],
      "@interlace/eslint-devkit": ["packages/eslint-devkit/src/index.ts"],
      "eslint-plugin-mcp": ["packages/eslint-plugin-mcp/src/index.ts"],
      "eslint-plugin-mcp-optimized": [
        "packages/eslint-plugin-mcp-optimized/src/index.ts"
      ],
      "eslint-plugin-code-mode": [
        "packages/eslint-plugin-code-mode/src/index.ts"
      ],
      "eslint-plugin-generalist": [
        "packages/eslint-plugin-generalist/src/index.ts"
      ],
      "eslint-plugin-security-expert": [
        "packages/eslint-plugin-security-expert/src/index.ts"
      ],
      "eslint-plugin-react-expert": [
        "packages/eslint-plugin-react-expert/src/index.ts"
      ],
      "eslint-plugin-a11y-expert": [
        "packages/eslint-plugin-a11y-expert/src/index.ts"
      ],
      "eslint-plugin-architecture-expert": [
        "packages/eslint-plugin-architecture-expert/src/index.ts"
      ],
      "eslint-plugin-performance-expert": [
        "packages/eslint-plugin-performance-expert/src/index.ts"
      ],
      "eslint-plugin-development-expert": [
        "packages/eslint-plugin-development-expert/src/index.ts"
      ],
      "eslint-plugin-secure-coding": [
        "packages/eslint-plugin-secure-coding/src/index.ts"
      ],
      "eslint-plugin-react-a11y": [
        "packages/eslint-plugin-react-a11y/src/index.ts"
      ],
      "eslint-plugin-dependencies": [
        "packages/eslint-plugin-dependencies/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
