{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.env*",
      "{workspaceRoot}/.npmrc",
      "{workspaceRoot}/.yarnrc",
      "{workspaceRoot}/.pnpmfile.cjs"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "test"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.tsbuildinfo"],
      "cache": true,
      "configurations": {
        "production": {}
      }
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js",
        "{workspaceRoot}/eslint.config.mjs"
      ],
      "outputs": ["{projectRoot}/.eslintcache"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/test-report.junit.xml"
      ],
      "cache": true
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.tsbuildinfo"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/tsconfig.base.json"]
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/test-report.junit.xml"
      ]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "vite:test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "release": {
    "projects": [
      "packages/eslint-plugin",
      "packages/eslint-plugin-llm-optimized",
      "packages/eslint-plugin-utils",
      "packages/cli",
      "packages/eslint-plugin-llm",
      "packages/eslint-plugin-mcp",
      "packages/eslint-plugin-mcp-optimized",
      "eslint-plugin-code-mode",
      "eslint-plugin-generalist",
      "eslint-plugin-secure-coding",
      "eslint-plugin-react-a11y",
      "eslint-plugin-dependencies"
    ],
    "projectsRelationship": "independent",
    "preid": "rc",
    "version": {
      "preVersionCommand": "pnpm nx run-many -t build",
      "conventionalCommits": true,
      "generatorOptions": {
        "updateDependents": "always",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk",
        "specifierSource": "conventional-commits"
      },
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      },
      "manifestRootsToUpdate": ["{projectRoot}"],
      "preReleaseCommand": "pnpm nx run-many -t build --projects=eslint-plugin,eslint-plugin-llm-optimized,eslint-plugin-utils,cli,eslint-plugin-llm,eslint-plugin-mcp,eslint-plugin-mcp-optimized,eslint-plugin-secure-coding",
      "git": {
        "commit": true,
        "commitArgs": "--no-verify",
        "commitMessage": "chore(release): {version}",
        "tag": true,
        "tagMessage": "chore(release): {version}"
      }
    },
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "file": "CHANGELOG.md"
      },
      "projectChangelogs": true,
      "git": {
        "commit": true,
        "commitArgs": "--no-verify",
        "commitMessage": "chore(release): {version}",
        "tag": false
      }
    },
    "releaseTagPattern": "{projectName}@{version}"
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "css",
        "linter": "none",
        "bundler": "vite"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "none"
      }
    }
  }
}
