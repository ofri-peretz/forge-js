{
  "name": "forge-js",
  "version": "1.0.0",
  "description": "ESLint plugin monorepo with LLM-optimized rules",
  "private": true,
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "lint:workflows": "actionlint",
    "release": "nx release",
    "release:dry-run": "nx release --dry-run",
    "release:first": "nx release --first-release",
    "release:publish": "nx release publish",
    "release:version": "nx release --skip-publish",
    "publish:plugin": "nx run eslint-plugin:publish",
    "publish:utils": "nx run eslint-plugin-utils:publish",
    "publish:cli": "nx run cli:publish",
    "publish:all": "pnpm nx run-many -t build --all && nx release publish",
    "ci:trigger": "gh workflow run ci.yml --ref local-playground-app && echo 'âœ… Workflow triggered!'",
    "ci:status": "tsx scripts/ci-status.ts",
    "ci": "tsx scripts/ci-status.ts",
    "delete-branches": "nx delete-branches",
    "sync-tags": "tsx scripts/sync-git-tags.ts",
    "sync-tags:dry-run": "tsx scripts/sync-git-tags.ts --dry-run",
    "check-links": "tsx scripts/check-markdown-links.ts",
    "check-versions": "tsx scripts/check-version-alignment.ts",
    "setup-branch-protection": "bash scripts/setup-branch-protection.sh"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "typescript",
    "linting"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@nx/eslint": "^22.0.2",
    "@nx/eslint-plugin": "22.0.2",
    "@nx/js": "^22.0.2",
    "@nx/react": "^22.0.2",
    "@nx/vite": "^22.0.3",
    "@nx/web": "^22.0.2",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "^1.14.0",
    "@swc/helpers": "^0.5.17",
    "@testing-library/dom": "10.4.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jiti": "2.6.1",
    "jsdom": "~27.1.0",
    "jsonc-eslint-parser": "^2.4.1",
    "nx": "22.0.2",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "verdaccio": "^6.2.1",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  },
  "nx": {},
  "pnpm": {
    "overrides": {
      "@nx/vite": "^22.0.3"
    }
  }
}